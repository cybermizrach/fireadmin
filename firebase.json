{
  "database": {
    "rules": "database.rules.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": [
    {
      "target": "app",
      "public": "dist",
      "ignore": [
        "**/node_modules/**",
        "firebase.json",
        "*.json",
        "*.md",
        "*.log",
        "**/.*",
        "Dockerfile",
        "LICENSE",
        "build",
        "docs",
        "src",
        "test"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        },
        {
          "source": "/docs/:page*",
          "destination": "https://fireadmin-docs.firebaseapp.com/:page",
          "type": 301
        }
      ]
    },
    {
      "target": "docs",
      "public": "docs/public",
      "ignore": [
        "**/node_modules/**",
        "firebase.json",
        "*.json",
        "*.md",
        "*.log",
        "**/.*",
        "Dockerfile",
        "LICENSE",
        "build",
        "dist",
        "src",
        "test"
      ]
    }
  ],
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build:prod"
    ],
    "ignore": [
      "src",
      "test",
      "jsconfig.json",
      "scripts/**",
      "**/*.spec.js",
      "**/.*"
    ]
  }
}
